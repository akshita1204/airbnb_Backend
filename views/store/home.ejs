<%- include('../partials/head') %>
<body class="bg-gray-100">

  <header class="bg-blue-600 text-white py-4">
    <h1 class="text-center text-3xl font-bold">Welcome to Airbnb</h1>
  </header>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-3xl">

    <div class="text-center mb-8">
      <a href="/host/add-home" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-500 transition duration-300">Add Home</a>
    </div>

    
    <div class="text-center mb-8">
      <a href="/bookings" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-500 transition duration-300">Add Bookings</a>
    </div>

    <div class="text-center mb-8">
      <a href="/fav-list" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-500 transition duration-300">Add Favorites</a>
    </div>

    <div class="text-center mb-8">
      <a href="/index" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-500 transition duration-300">Add Index</a>
    </div>

    <div class="text-center mb-8">
      <a href="/host/homelist" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-500 transition duration-300">Add Home List</a>
    </div>


    <!-- Display homes in green boxes -->
    <ul class="space-y-6">
      <% registered.forEach(home => { %>
        <li class="bg-green-50 border border-green-200 rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.hname %></h3>
          <div class="text-sm text-gray-600">
            <strong>Rating:</strong> <%= home.rating %>
          </div>
          <div class="text-sm text-gray-600">
            <strong>Price:</strong> <%= home.price %>
          </div>
          <div class="text-sm text-gray-600">
            <strong>Location:</strong> <%= home.location %>
          </div>
          <a href="/<%= home.id %>">Details</a>
          <button class="mt-4 bg-green-500 text-white px-6 py-2 rounded hover:bg-green-400 transition duration-300">BOOK</button>
        </li>
      <% }) %>
    </ul>

  </main>

</body>
</html>
